@model EducationPortal.Presentation.ViewModels.Courses.CourseFormViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@if (Model.Id.HasValue)
{
    <form asp-action="Edit" asp-route-id="@Model.Id" method="post" asp-antiforgery="true">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="row">
            <div class="col-md-6">
                <label class="form-label">Materials</label>
                <div class="border rounded p-2 scroll-panel-260">
                    @foreach (var option in Model.MaterialOptions)
                    {
                        var isChecked = Model.SelectedMaterialIds.Contains(int.Parse(option.Value));
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox"
                                   name="SelectedMaterialIds" value="@option.Value"
                                   @(isChecked ? "checked" : "") />
                            <label class="form-check-label">@option.Text</label>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-6">
                <label class="form-label">Skills</label>
                <div class="border rounded p-2 scroll-panel-260">
                    @foreach (var option in Model.SkillOptions)
                    {
                        var isChecked = Model.SelectedSkillIds.Contains(int.Parse(option.Value));
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox"
                                   name="SelectedSkillIds" value="@option.Value"
                                   @(isChecked ? "checked" : "") />
                            <label class="form-check-label">@option.Text</label>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="mt-3 text-end">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
    </form>
}
else
{
    <form asp-action="Create" method="post" asp-antiforgery="true">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="row">
            <div class="col-md-6">
                <label class="form-label">Materials</label>
                <div class="border rounded p-2 scroll-panel-260">
                    @foreach (var option in Model.MaterialOptions)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox"
                                   name="SelectedMaterialIds" value="@option.Value" />
                            <label class="form-check-label">@option.Text</label>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-6">
                <label class="form-label">Skills</label>
                <div class="border rounded p-2 scroll-panel-260">
                    @foreach (var option in Model.SkillOptions)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox"
                                   name="SelectedSkillIds" value="@option.Value" />
                            <label class="form-check-label">@option.Text</label>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="mt-3 text-end">
            <button type="submit" class="btn btn-primary">Create</button>
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
    </form>
}