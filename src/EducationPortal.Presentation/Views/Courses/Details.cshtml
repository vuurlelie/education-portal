@using EducationPortal.Presentation.Extensions
@model EducationPortal.Presentation.ViewModels.Courses.CourseDetailsViewModel
@{
    ViewData["Title"] = Model.Name;
}

<h2 class="mb-1">@Model.Name</h2>
@if (!string.IsNullOrWhiteSpace(Model.Description))
{
    <p class="text-muted mb-0">@Model.Description</p>
}

<h4 class="mt-4">Materials</h4>
@if (Model.Materials.Count == 0)
{
    <p class="text-muted">No materials yet.</p>
}
else
{
    <ul class="list-group mb-3">
        @foreach (var material in Model.Materials)
        {
            <li class="list-group-item d-flex justify-content-between">
                <span>@material.Title</span>
                <span class="badge bg-secondary">@material.Type</span>
            </li>
        }
    </ul>
}

<h4 class="mt-4">Skills awarded on completion</h4>
@if (Model.Skills.Count == 0)
{
    <p class="text-muted">No skills mapped yet.</p>
}
else
{
    <ul class="list-group">
        @foreach (var skill in Model.Skills)
        {
            <li class="list-group-item">@skill.Name</li>
        }
    </ul>
}

<div class="mt-3">
    @if (User.IsAuthenticated() && Model.CanStart)
    {
        <form asp-action="Enroll"
              asp-route-id="@Model.Id"
              method="post"
              class="d-inline me-2"
              asp-antiforgery="true">
            <button type="submit" class="btn btn-warning">Start course</button>
        </form>
    }

    @if (User.IsAuthenticated())
    {
        <a href="#"
           class="btn btn-success me-2"
           data-modal-url="@Url.Action("Edit", "Courses", new { id = Model.Id })"
           data-modal-title="Edit course">Edit</a>

        <form asp-action="Delete"
              asp-route-id="@Model.Id"
              method="post"
              class="d-inline"
              asp-antiforgery="true"
              onsubmit="return confirm('Delete this course?');">
            <button type="submit" class="btn btn-danger me-2">Delete</button>
        </form>
    }

    <a class="btn btn-outline-secondary" asp-action="Index">Back to list</a>
</div>