@model EducationPortal.Presentation.ViewModels.Skills.SkillFormViewModel

@if (Model.Id.HasValue)
{
    <form asp-action="Edit" asp-route-id="@Model.Id" method="post" asp-antiforgery="true">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Attach to courses</label>
            <div class="border rounded p-2 scroll-panel-220">
                @foreach (var option in Model.CourseOptions)
                {
                    var courseId = int.Parse(option.Value);
                    var isChecked = Model.SelectedCourseIds?.Contains(courseId) ?? false;
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="SelectedCourseIds" value="@option.Value" checked="@(isChecked)" id="course_@option.Value" />
                        <label class="form-check-label" for="course_@option.Value">@option.Text</label>
                    </div>
                }
            </div>
        </div>

        <div class="mt-3 text-end">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
    </form>
}
else
{
    <form asp-action="Create" method="post" asp-antiforgery="true">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Attach to courses</label>
            <div class="border rounded p-2 scroll-panel-220">
                @foreach (var option in Model.CourseOptions)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="SelectedCourseIds" value="@option.Value" id="course_@option.Value" />
                        <label class="form-check-label" for="course_@option.Value">@option.Text</label>
                    </div>
                }
            </div>
        </div>

        <div class="mt-3 text-end">
            <button type="submit" class="btn btn-primary">Create</button>
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
    </form>
}