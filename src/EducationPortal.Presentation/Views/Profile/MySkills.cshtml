@model IReadOnlyList<EducationPortal.Presentation.ViewModels.Profile.UserSkillItemViewModel>
@{
    ViewData["Title"] = "My Skills";
}

<h2 class="mb-3">My Skills</h2>

@if (Model.Count == 0)
{
    <p class="text-muted">No skills yet.</p>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Skill</th>
                <th class="text-end w-140">Level</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SkillName</td>
                    <td class="text-end">@item.Level</td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="mt-3">
    <a class="btn btn-outline-secondary" asp-action="MyProfile">Back to Profile</a>
</div>