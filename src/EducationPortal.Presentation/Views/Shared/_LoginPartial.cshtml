@using EducationPortal.Presentation.Extensions

<ul class="navbar-nav ms-auto align-items-center">
    @if (User.IsAuthenticated())
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Profile" asp-action="MyProfile">My profile</a>
        </li>
        <li class="nav-item">
            <form class="d-inline"
                  asp-controller="Account"
                  asp-action="Logout"
                  method="post"
                  asp-antiforgery="true">
                <button type="submit" class="btn btn-link nav-link px-2">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link"
               asp-controller="Account"
               asp-action="Login"
               asp-route-returnUrl="@($"{Context.Request.Path}{Context.Request.QueryString}")">
                Login
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link"
               asp-controller="Account"
               asp-action="Register"
               asp-route-returnUrl="@($"{Context.Request.Path}{Context.Request.QueryString}")">
                Registration
            </a>
        </li>
    }
</ul>